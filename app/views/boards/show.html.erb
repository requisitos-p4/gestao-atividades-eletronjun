<h1> <%= @board.name %> </h1>

<div class="btn-group" id="profile-conf">
<%= link_to "Adicionar membros", "", class: "btn btn-default" %>
<%= link_to "Editar quadro", edit_board_path, class: "btn btn-default" %>
<%= link_to "Excluir quadro", board_path, method: :delete, class: "btn btn-default", data: { confirm: "Você tem certeza que deseja excluir este quadro?" } %>
</div>

<h2>Informações do quadro</h2>

<table class='table' id="board-info">
  <tr>
    <td class="align-center">Nome</td>
    <td class="align-center"><%= @board.name %></td>
  </tr>
  <tr>
    <td class="align-center">Descrição</td>
    <td class="align-center"><%= @board.description %></td>
  </tr>
</table>


<h2>Membros</h2>

<% @board.members.each do |m| %>
    <% b = User.find(m) %>
    <div class="btn-group">
      <%= link_to b.name, user_path(b), class: "btn btn-success" %>
      <%= link_to "-", "#{@board.id}/unassign/#{b.id}", class: "btn btn-danger", id: "unassign-member" %>
    </div>
<% end %>

<h2>Etiquetas</h2>

<% @board.tags.each do |m| %>
    <% b = Tag.find(m) %>
    <div class="btn-group">
      <%= link_to b.name, tag_path(b), class: "btn btn-success" %>
    </div>
<% end %>
