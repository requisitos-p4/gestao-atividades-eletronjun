<h1>Editar <%= @board.name %></h1>

<% if @board.errors.any? %>
    <% @board.errors.full_messages.each do |error_message| %>
    <%= error_message %>
  <% end %>
<% end %>

<%= form_for @board do |f| %>
 
  <div class='new-board-info'>
    <div id='board-name-field'>
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name %>
    </div>

    <div id='board-description-field'>
      <%= f.label :description, "Descrição" %>
      <%= f.text_area :description %>
    </div>
  </div>

  <%= f.submit "Atualizar quadro" %>

<% end %>
