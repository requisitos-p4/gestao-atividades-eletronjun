<h1>Cadastre-se</h1>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error_message| %>
    <%= error_message %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Digite aqui seu nome" %>

      <%= f.label :email, "Email" %>
      <%= f.email_field :email, class: 'form-control', placeholder: "exemplo@exemplo.com" %>

      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmar senha" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Criar conta", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
