  <div class="container">
    <%= link_to "eletronjun", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Início", root_path %></li>
        <% if logged_in? %>
          <!-- check if user is president -->
          <li><%= link_to "Membros", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Minha conta <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Meu perfil", current_user %></li>
              <li><%= link_to "Configurações da conta", users_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sair", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Entrar", login_path %></li>
        <% end %>
      </ul>
    </nav>
